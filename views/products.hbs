<h1 class="text-center" id="productos">Listado de productos</h1>
<div class="container mt-5 d-flex justify-content-between flex-wrap">
    {{#if productsExist}}
        {{#each products}}
            <div class="card m-5" style="width:18rem">
                <img src="{{this.thumbnail}}" class="card-img-top h-50" alt={{this.title}}/>
                    <div class="card-body d-flex flex-column justify-content-around">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">Precio: ${{this.price}} / ID: {{this.id}}</p>
                        
                        <button type="button" class="btn btn-secondary" onclick="confirmEdit({{json this}})">Editar</button>
                        <button type="button" class="btn btn-danger" onclick="confirmDelete({{this.id}})">Eliminar</button>
                    </div>
            </div>
        {{/each}}
        {{else}}
            <h1 class="text-center">No se encontraron productos</h1>
    {{/if}}
</div>
    
<br/>

<h1 class="text-center" id="formulario">Agregar un producto</h1>
<form  class="container d-flex flex-column" action="/api/productos" method="POST" enctype="multipart/form-data">
