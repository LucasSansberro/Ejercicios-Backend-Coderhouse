html
  head
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js')  
    title="Server con Pug"

  body
    ul(class="list-unstyled pt-3")
      li
        a(class="mx-5 " href="/")="Formulario"
        a(class="mx-5" href="/productos")="Productos"
    

    h1(class="text-center")="Listado de productos"
    div(class="container mt-5 d-flex justify-content-between flex-wrap")
      if productsExist
        for item in products
          div(class="card m-5" style="width:18rem")
            img(src=item.thumbnail class="card-img-top" alt=item.title)
            div(class="card-body d-flex flex-column justify-content-between")
              h5(class="card-title")=item.title
              p(class="card-text")=item.price
      else
        h1(class="text-center")="No se encontraron productos"
    
    p(class='bg-dark text-white text-center fixed-bottom')="*Sitio desarrollado por Lucas Sansberro para el curso de Backend en Coderhouse."